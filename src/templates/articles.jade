mixin articles(articles)
  ul.articles
    for a in articles
      li.articles__item
        time.articles__item__date
          if isEnglish(locals)
            = article.englishDate(a)
          else 
            = article.germanDate(a)
        a.articles__item__link(href=a.permalink)
          span.articles__item__title= a.title
          if a.subtitle
            span.articles__item__subtitle= a.subtitle
