*
  margin 0
  padding 0
  border 0
  outline 0
  vertical-align baseline

html
  line-height 1.45
  font-family Helvetica, Arial, Tahoma, Verdana, sans-serif
  @media screen
    font-size 14px
  @media print
    font-size 10pt

body
  color colorText
  background #FFF

section
  margin-bottom marginHuge

h1
  margin-bottom marginTiny
  font-family DINCondBold
  font-weight normal
  font-size fontSizeHuge
  line-height 1.2

h2
h3
h4
h5
h6
  font-family DINLight
  font-weight normal
  color colorSubtle
  letter-spacing -.02em

h2
  margin-bottom marginSmall
  font-size fontSizeLarge
  line-height 1.25

h3
  margin-top 1em
  margin-bottom marginTiny
  font-size fontSizeHead
  line-height 1.4

h4
h5
h6
  margin-top 1em
  margin-bottom marginTiny
  font-size fontSizeSubhead
  line-height 1.4

p
ul
ol
  margin-bottom marginNormal

ul
ol
  margin-left marginLarge

a
  text-decoration none
  &:hover
  &:active
    text-decoration underline
  main &
    color colorHighlight
  footer &
    color colorSubtle
