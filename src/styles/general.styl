*
  margin 0
  padding 0
  border 0
  outline 0
  vertical-align baseline

html
  line-height 1.45
  font-family Helvetica, Arial, Tahoma, Verdana, sans-serif
  @media screen
    font-size 14px
  @media print
    font-size 10pt

body
  color colorText
  background #FFF

section
  margin-bottom marginHuge

h1
  margin-bottom marginTiny
  font-family DINCondBold
  font-weight normal
  font-size fontSizeHuge

h2
h3
  font-family DINLight
  font-weight normal
  color colorSubtle
  letter-spacing -.02em

h2
  margin-bottom marginSmall
  font-size fontSizeLarge

h3
  font-size fontSizeHead
  margin-top 1em
  margin-bottom marginTiny

p
ul
ol
    margin-bottom marginNormal

main
footer
  ul
  ol
    list-style none

a
  text-decoration none
  &:hover
  &:active
    text-decoration underline
  main &
    color colorHighlight
  footer &
    color colorSubtle
