.ioctocat
  overflow hidden
  margin-top 1.25em
  border 1px solid lighten($color-lightgray, 1)
  background-image linear-gradient(lighten($color-lightgray, 7), lighten($color-lightgray, 3))
  @extend $escape-wrap

  a
    color $color-subtle

  @media print
    display none

  &__heading
    margin-top .25em

  &__icon
    float left
    margin $space-tiny $space-medium $space-normal 0

    @media up_to_M
      width 80px
    @media M_and_up
      width 100px

  &__description
    &:last-child
      margin 0

    @media M_and_up
      margin 0
