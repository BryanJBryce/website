.articles
  list-style none
  margin-left 0

  &__item
    + .articles__item
      @media up_to_M
        margin-top marginLarge
      @media M_and_up
        margin-top marginSmall

    &--topic
      + .articles__item--topic
        @media M_and_up
          margin-top marginLarge

    &__date
      display inline-block
      width 6.25em
      color colorSubtle
      @media up_to_M
        display block
      @media M_and_up
        margin-right marginNormal

    &__title
      font-weight bold
      @media up_to_M
        display block

    &__subtitle
      color colorText
      text-decoration none
      @media up_to_M
        display block
      @media M_and_up
        margin-left marginSmall

    &__lang
      color colorGray
      @media M_and_up
        margin-left marginSmall

    &__alternate
      .articles__item__link
        color colorGray

    &__description
      color colorSubtle
