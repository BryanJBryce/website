.logo
  display block
  width widthAside
  background #FFF
  &:hover
    text-decoration none
  @media screen and (min-width: 640px), print
    margin-left (logoJump * -1)
  &__slashes
  &__name
    display inline-block
    font-family DINCondBold
    font-size 3em
    letter-spacing -.03em
    color #000
  &__slashes
    color colorHighlight
    margin-right .075em
  &__claim
    display block
    font-family DINLight
    margin -.5em 0 0 1.2em
    font-size fontSizeLarge
    color colorSubtle
