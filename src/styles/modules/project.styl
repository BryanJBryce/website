.project
  margin-bottom $margin-huge
  &__name
    margin $margin-tiny 0
    font-size $font-size-head
    font-weight normal
    color $color-highlight
  &__description
    margin-bottom $margin-normal
  &__task
  &__period
  &__context
    margin-bottom $margin-small
    color $color-subtle
    a
      color $color-subtle
  @media screen
    &__task
    &__period
    &__context
      padding-left 2em
      background-size 16px
      background-repeat no-repeat
    &__task
      background-image url(/svgs/project.svg#task)
      background-position 2px 1px
    &__context
      background-image url(/svgs/project.svg#context)
      background-position 2px 1px
    &__period
      background-image url(/svgs/project.svg#period)
      background-position 2px 0
  @media print
    &__task
    &__period
    &__context
      &:before
        display inline-block
        margin-right $margin-tiny
        color $color-subtle
    &__task:before
      content "Aufgabe:"
    &__context:before
      content "Kunde:"
    &__period:before
      content "Zeitraum:"
