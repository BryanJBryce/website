.article
  &__header
    margin-bottom $margin-normal

  &__footer
    margin-top $margin-large
    color $color-subtle

  &__meta
    margin-bottom $margin-large

  &__nav
    &__title
      margin-bottom $margin-small

    &__items
      display flex
      flex-wrap wrap
      justify-content space-between

    &__item
      flex 0 1 auto
      margin-bottom $margin-normal
      &:first-child
        margin-right $margin-large

    &__description
      margin-right $margin-tiny
