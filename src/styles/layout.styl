#nav
  margin-bottom $margin-huge
  color #fff
  background $color-darkblue

#header
  @media up_to_L
    margin-bottom $margin-large
  @media L_and_up_and_print
    overflow hidden
    margin-bottom $margin-huge
    .logo
      float right
      width $width-aside
      margin-right $logo-jump

#main
  @media L_and_up_and_print
    clear both
    width $width-main

#footer
  margin-bottom $margin-large
  @media L_and_up_and_print
    overflow hidden
    margin-top $margin-huge
    h2
      display none
    .vcard
      float right
      width $width-aside
