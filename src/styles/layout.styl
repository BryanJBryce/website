@media up_to_L
  body
    max-width widthMain
  header
    margin-bottom marginLarge

@media L_and_up
  body
    width widthMain + widthSpace + widthAside
  header
    overflow hidden
    margin-bottom marginHuge
    .logo
      float right
      width widthAside
      margin-right logoJump
  main
    clear both
    width widthMain
  footer
    overflow hidden
    margin-top marginHuge
    h2
      display none
    .vcard
      float right
      width widthAside
